[user]
    # Altere para seu username e email
    name = {{ nome }}
    email = {{ email }}

    colors = auto
    signingkey = {{ signkey }}

[core]
    editor = vim

[color]
    ui = true

[alias]
    s = status -sb
    slog = log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[merge]
    tool = vimdiff

[mergetool "vimdiff"]
    cmd = vim -d "$LOCAL" "$MERGED" "$REMOTE"

[push]
    default = simple

[grep]
  break = true
  heading = true
  lineNumber = true
